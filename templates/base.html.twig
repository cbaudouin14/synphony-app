<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Symfony Library
			{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}
		{% block javascripts %}{% endblock %}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- ici le css -->
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg bg-body-bs-success">
				<div class="container-fluid">
					<div class="collapse navbar-collapse">
						<a class="navbar-brand" href="{{ path('app_home') }}">Bibliothèque</a>
						<ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="">Livres</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="">Mes réservations</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_user_index') }}">Gérer les utilisateurs</a>
									</li>
								{% endif %}
								<li class="nav-item">
									<a class="nav-link" href="{{ logout_path() }}">Déconnexion</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		</header>


		<main>
			{% block body %}{% endblock %}
		</main>

		<footer>
			<p>&copy;
				{{ "now"|date("Y") }}
				Bibliothèque Symfony. Tous droits réservés.</p>
		</footer>
	</body>
</html>
