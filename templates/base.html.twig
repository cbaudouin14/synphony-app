<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Symfony Library
			{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}
		{% block javascripts %}{% endblock %}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

		<!-- ici le css -->
	</head>
	<body class="d-flex flex-column min-vh-100">
		<header>
			<nav class="navbar navbar-expand-lg" style="background-color: rgba(94, 192, 96, 0.91);">
				<div class="container-fluid">
					<div class="collapse navbar-collapse">
						<a class="navbar-brand" href="{{ path('app_home') }}">Bibliothèque</a>
						<ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link" href="">Livres</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="">Mes réservations</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_user_index') }}">Gérer les utilisateurs</a>
									</li>
								{% endif %}
								<li class="nav-item">
									<a class="nav-link" href="{{ logout_path() }}">Déconnexion</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		</header>


		<main class="flex-fill container my-4"> {% block body %}{% endblock %}
			</main>

			<footer>
				<div class="text-center p-4" style="background-color: rgba(94, 192, 96, 0.91);">
					<p>&copy;
						{{ "now"|date("Y") }}
						Bibliothèque Symfony. Tous droits réservés.</p>
				</div>
			</footer>
		</body>
	</html>
