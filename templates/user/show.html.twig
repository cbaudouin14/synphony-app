{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.email }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Utilisateur : {{ user.email }}</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>••••••••</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-secondary" href="{{ path('app_user_index') }}">Retour à la liste</a>
        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}