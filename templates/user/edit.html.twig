{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur {{ user.email }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier l'utilisateur : {{ user.email }}</h1>

    <div class="card p-4 shadow-sm">
        {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="d-flex gap-2 mt-3">
        <a class="btn btn-secondary" href="{{ path('app_user_index') }}">Retour à la liste</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}