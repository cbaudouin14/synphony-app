{% extends 'base.html.twig' %}

{% block title %}Réservations de {{ user.email }}{% endblock %}

{% block body %}
<h1>Réservations de {{ user.email }}</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date début</th>
            <th>Date fin</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.startDate|date('Y-m-d') }}</td>
                <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.active ? 'Oui' : 'Non' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune réservation</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_user_index') }}">Retour</a>
{% endblock %}