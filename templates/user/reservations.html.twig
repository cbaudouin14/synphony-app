{% extends 'base.html.twig' %}

{% block title %}Réservations de {{ user.email }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Réservations de {{ user.email }}</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.startDate|date('Y-m-d') }}</td>
                <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    {% if reservation.active %}
                        <span class="badge bg-success">Oui</span>
                    {% else %}
                        <span class="badge bg-secondary">Non</span>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucune réservation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary mt-3" href="{{ path('app_user_index') }}">Retour à la liste</a>
</div>
{% endblock %}