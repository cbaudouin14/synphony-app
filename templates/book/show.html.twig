{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ book.stock }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ book.available ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">Retour Ã  la liste</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_book_edit', {'id': book.id}) }}">Modifier</a>
        {{ include('book/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
