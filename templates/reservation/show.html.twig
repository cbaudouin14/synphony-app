{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Réservation n°{{ reservation.id }}</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Date de début</th>
                        <td>{{ reservation.startDate ? reservation.startDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date de fin</th>
                        <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date de fin prévue</th>
                        <td>{{ reservation.expectedEndDate ? reservation.expectedEndDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date de fin effective</th>
                        <td>{{ reservation.effectiveEndDate ? reservation.effectiveEndDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Active</th>
                        <td>
                            {% if reservation.active %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-secondary" href="{{ path('app_reservation_index') }}">Retour à la liste</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-warning" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
            {{ include('reservation/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
{% endblock %}