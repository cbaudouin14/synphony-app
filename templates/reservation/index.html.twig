{% extends 'base.html.twig' %}

{% block title %}Liste des réservations{% endblock %}

{% block body %}
    <h1>Liste des réservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Date de fin prévue</th>
                <th>Date de fin effective</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.startDate ? reservation.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.expectedEndDate ? reservation.expectedEndDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.effectiveEndDate ? reservation.effectiveEndDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.active ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">Voir</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune réservation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Ajouter une réservation</a>
{% endblock %}
